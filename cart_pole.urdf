<?xml version="1.0" ?>
<robot name="cart_pole">

  <!--
     A simple cart + pendulum URDF:
     - Cart mass ~0.5 kg
     - Pendulum rod length ~0.45 m, mass ~0.05 kg
     - Revolute joint so pendulum can swing in XZ-plane
  -->

  <!-- CART (base link) -->
  <link name="cart_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- box: 0.4 x 0.2 x 0.2 (width x depth x height) -->
        <box size="0.4 0.2 0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0.3 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.4 0.2 0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- PENDULUM ROD (child link) -->
  <link name="pole_link">
    <inertial>
      <!-- For rod ~0.45m length, mass=0.05kg. Adjust as needed. -->
      <origin xyz="0 0 0.225"/>
      <mass value="0.05"/>
      <inertia ixx="0.0006" iyy="0.0006" izz="0.0006" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <!-- cylinder: length=0.45, radius=0.01 -->
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.45" radius="0.01"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.45" radius="0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Revolute joint at top center of the cart box (z=0.2) -->
  <joint name="pole_joint" type="revolute">
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <parent link="cart_link"/>
    <child link="pole_link"/>
    <!-- rotate around Y-axis so the pendulum swings in XZ-plane -->
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="50"/>
  </joint>

</robot>
